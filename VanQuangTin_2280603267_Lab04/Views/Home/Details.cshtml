@model VanQuangTin_2280603267_Lab04.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int numOfQuantity = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-index.css" asp-append-version="true" />
}

<div class="product-container">
    <h2 class="product-title">Chi tiết sản phẩm</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="product-card">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="product-card-img" />
                <div class="product-card-body">
                    <h5 class="product-card-title">@Model.Name</h5>
                    <div class="product-card-divider"></div>
                    <p class="product-card-price">@((Model.Price * 1000).ToString("#,##0")) ₫</p>
                    <p class="product-card-text"><strong>Mô tả:</strong> @Model.Description</p>
                    <p class="product-card-text"><strong>Loại:</strong> @Model.Category?.Name</p>
                    <div class="product-card-button">
                        <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@Model.Id" asp-route-quantity="@numOfQuantity" class="product-btn product-btn-primary">
                            <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ hàng
                        </a>
                    </div>
                    <div class="product-card-button">
                        <a asp-action="Index" class="product-btn product-btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>